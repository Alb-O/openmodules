{
  "name": "openmodules",
  "version": "0.1.0",
  "description": "OpenCode plugin that discovers MODULE.md files and exposes them as tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "test": "bun test ./src --timeout 120000",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "gray-matter": "^4.0",
    "ignore": "^7.0.5",
    "zod": "^4.1"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0",
    "@types/bun": "^1.3",
    "typescript": "^5"
  },
  "keywords": ["opencode", "plugin", "modules", "anthropic"],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlteredCarbonate/openmodules"
  }
}
